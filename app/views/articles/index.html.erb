<h1> This is my blog </h1>

    <%= link_to "New Article", articles_new_path, class: 'new-btn' %>
<div class = 'container'>    
    <table>
        <thead>
            <tr>
                <th> Title </th>
                <th> Body </th>
                <th> Actions </th>
            </tr>
        </thead>
        <tbody>
            <% @articles.each do |article| %>
                <tr>
                    <td> <%= article.title %> </td>
                    <td> <%= article.body %> </td>
                    <td class = 'actions'>                     
                        <%= link_to "Show", show_article_path(article), class: 'action' %> 
                        <%= link_to "Edit", edit_article_path(article), class: 'action' %> 
                        <%= link_to "Delete", delete_article_path(article), method: "delete", class: 'action', data: { confirm: "Are you sure?" } %> 
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>