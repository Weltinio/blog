<%= link_to "New", articles_new_path %>
<table>
    <thead>
        <tr>
            <th> ID </th>
            <th> Title </th>
            <th> Body </th>
            <th> Actions </th>
        </tr>

    </thead>
    <tbody>
        <% @articles.each do |article| %>
            <tr>
                <td> <%= article.id %> </td>
                <td> <%= article.title %> </td>
                <td> <%= article.body %> </td>
                <td> 
                    <%= link_to "Delete", delete_article_path(article), method: "delete", data: { confirm: "Are you sure?" } %> 
                    <%= link_to "Edit", edit_article_path(article) %> 
                    <%= link_to "Show", show_article_path(article) %> 
                </td>
            </tr>
        <% end %>
    </tbody>
</table>